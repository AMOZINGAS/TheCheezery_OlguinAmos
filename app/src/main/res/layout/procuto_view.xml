<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramel_frap"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/producto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$5.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</LinearLayout>